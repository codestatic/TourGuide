<?xml version="1.0" encoding="utf-8"?>
<resources>

    // TabLayout Style

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#81D4FA</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">#9E9E9E</item>
    </style>

    // tablayout text

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    // list view title style

    <style name="listViewHeader">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    //list view summary text style

    <style name="listViewSummary">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    //list view summary text style

    <style name="listViewAddress">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>